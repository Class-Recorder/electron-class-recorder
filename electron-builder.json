{
  "productName": "Class-Recorder",
  "asarUnpack": [
    "dependencies/**",
    "executable/**"
  ],
  "directories": {
    "output": "release/",
    "buildResources": "buildResources"
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "target": [
      "portable",
      "nsis",
      "msi"
    ]
  },
  "mac": {
    "icon": "icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "icons",
    "target": [
      "AppImage",
      "deb",
      "zip"
    ]
  }
}
